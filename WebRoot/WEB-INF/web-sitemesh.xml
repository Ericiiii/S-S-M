<?xml version="1.0" encoding="UTF-8"?>
<sitemesh xmlns="http://sitemesh.org/xml/config"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://sitemesh.org/xml/config http://sitemesh.org/xml/config/sitemesh3.xsd">

	<!-- ==================================================== -->
	<!-- 配置默认的渲染器. 将应用于所有路径. -->
	<mapping>
		<path>/*</path>
		<decorator>/themes/default-template.jsp</decorator>
	</mapping>
	
	<!-- 不被渲染的路径. -->
	<mapping path="/*help*" exclue="true" />
	<mapping path="/*Dialog*" exclue="true" />
	
</sitemesh>

